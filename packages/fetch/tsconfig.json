{
  "extends": "@nobitex/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "target": "es6",
    "declaration": true,
    "noEmit": false,
    "moduleResolution": "Bundler",
    "module": "esnext",
    "tsBuildInfoFile": ".tsbuildinfo",
    "allowArbitraryExtensions": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "*.js", "**/*.test.ts", "**/*.test.js", "**/*.spec.js", "**/*.spec.ts", "dist/**", "archive/**", "vitest.config.ts"],
}
