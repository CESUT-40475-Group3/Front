{
  "name": "@networking/utils",
  "version": "1.0.1",
  "type": "module",
  "private": true,
  "description": "A utility library for Networking Front-Next",
  "exports": {
    "./*": "./dist/*"
  },
  "types": "./dist/*",
  "scripts": {
