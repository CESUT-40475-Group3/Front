{
  "extends": "@networking/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "jsx": "react",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "declaration": true,
    "noEmit": false,
    "moduleResolution": "Bundler",
    "module": "esnext",
    "target": "es6",
    "tsBuildInfoFile": ".tsbuildinfo",
    "allowArbitraryExtensions": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["vitest/jsdom"],
    "declarationMap": true,
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": [
    "node_modules",
    "*.js",
    "**/*.test.ts",
    "**/*.test.js",
    "**/*.spec.js",
    "**/*.spec.ts",
    "dist/**",
    "vitest.config.ts"
  ]
}
