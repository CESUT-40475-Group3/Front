{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "globalDependencies": [
    "./packages/typescript-config/base.json",
    "./packages/typescript-config/next.json",
    "!README.md"
  ],
  "tasks": {
    "lint": {
      "dependsOn": [],
      "cache": true,
      "inputs": [
        "$TURBO_DEFAULT$",
        "../packages/eslint-config/commonRules.js",
        "../packages/eslint-config/library.js",
        "../packages/eslint-config/next.js",
        "!README.md"
      ],
      "outputLogs": "new-only"
    },
    "lint-staged": {
      "dependsOn": [],
      "cache": false,
      "inputs": [
        "$TURBO_DEFAULT$",
        "../packages/eslint-config/commonRules.js",
        "../packages/eslint-config/library.js",
        "../packages/eslint-config/next.js",
        "!README.md"
      ],
      "outputLogs": "full"
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true,
      "interactive": false,
      "outputLogs": "full"
    },
    "dev:local-content": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true,
      "interactive": false,
      "outputLogs": "full"
    },
    "dev:prod-content": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true,
      "interactive": false,
      "outputLogs": "full"
    },
    "build": {
      "dependsOn": ["^build", "test"],
      "cache": true,
      "inputs": ["$TURBO_DEFAULT$", "env/.env.*", "!README.md"],
      "env": ["BUILD_ENV", "host*", "origin", "isProduction", "target", "type", "api*", "NODE_ENV","NEXT_JS_SOURCEMAPS","arCaptcha"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "out/**"],
      "outputLogs": "full"
    },
    "build:watch": {
      "dependsOn": ["^build", "test"],
      "cache": true,
      "inputs": ["$TURBO_DEFAULT$", "env/.env.*", "!README.md"],
      "env": ["BUILD_ENV", "host*", "origin", "isProduction", "target", "type", "api*", "NODE_ENV","NEXT_JS_SOURCEMAPS","arCaptcha"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "out/**"],
      "outputLogs": "full"
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true,
      "interactive": false,
      "outputLogs": "full"
    }
  }
}
